@model IEnumerable<EShopOnlineExam.Models.ToDoList>

@{
    ViewData["Title"] = "GetToDoList";
}

<h1>Marker's task list</h1>

<table id="example" class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                Marker Id
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exam.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Marker.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Exam.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DueDate)
                </td>
                <td>
                    <button type="button" class="btn btn-success" onclick="location.href = '@Url.Action("StatusManager", "Marker", new { id = item.Id })'">
                            Request to Close
                            </button>
                </td>
                <td>
                    <a asp-action="MarkerTask" asp-route-id="@item.Exam.Id" class="btn btn-info">Do The Task</a> 
                    
                </td>
            </tr>
        }
    </tbody>
</table>


<script src="~/js/jquery-3.5.1.js" type="text/javascript"></script>
<script src="~/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="~/js/dataTables.bootstrap5.min.js" type="text/javascript"></script>

<script>
    $(document).ready(function () {
        $.noConflict();
        var table = $('#example').DataTable();
    });</script>
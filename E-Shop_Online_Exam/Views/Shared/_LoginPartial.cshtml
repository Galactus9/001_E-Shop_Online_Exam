@using Microsoft.AspNetCore.Identity
@using EShopOnlineExam.Models;
@inject SignInManager<Candidate> SignInManager
@inject UserManager<Candidate> UserManager


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
            <button id="loggedIn" type="button" data-bs-toggle="dropdown" class="btn btn-primary btn-outline-success bg-transparent text-light" style="border-radius:40px"><h6>@UserManager.GetUserName(User)</h6></button>
            <div class="dropdown-menu" aria-labelledby="loggedIn" style="opacity:1">
                  <a id="manage" class="text-dark btn dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">My Account</a>
                <a class="text-dark btn dropdown-item p-0" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <form id="logoutForm" class="form-inline m-0" asp-area="Identity" asp-page="/Account/Logout">
                        <button id="logout" type="submit" class="btn dropdown-item text-dark">Logout</button>
                        </form>
                    </a>
               </div>
           </div>
        
 
    }
    else
    {
        <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
            <div class="btn-group" role="group" style="border-radius:40px">
                <i id="btnGroupDrop1" type="button-large" class="btn btn-secondary btn-outline-success dropdown bi bi-person bg-transparent text-light h4" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="border-radius:40px"></i>
                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                    <a id="manage" class="text-dark btn dropdown-item" asp-area="Identity" asp-page="/Account/Login" title="Manage">Login</a>
                    <a class="text-dark btn btn-primary dropdown-item" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                </div>
            </div>
        </div>

    }
</ul>
<script src="~/js/jquery-3.5.1.js" type="text/javascript"></script>

@model EShopOnlineExam.Models.Exam

@{
    ViewData["Title"] = "Details";
}
@{
    var minutes = ((Model.ExamDuration / 60)).ToString();
    var time = $"{minutes} minutes";
}

<h1>Details</h1>
<div>
    <h4>Exam</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Certificate.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Certificate.Id)
        </dd>        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Certificate.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Certificate.Title)
        </dd>        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExamDuration)
        </dt>
        <dd class = "col-sm-10">
            @time
        </dd>
    </dl>
    <br />
    <br />
        <h4>Exam Topics</h4>
    <hr />
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        <h5>Exam Topic Id</h5>
                    </th>
                    <th>
                        <h5>Topic Id</h5>
                    </th>
                    <th>
                        <h5>Topic Title</h5>
                    </th>
                    <th>
                        <h5>Topic Subject Weight</h5>
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Topic)
                {
                    if (item.SubjectWeight > 0)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Topic.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Topic.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubjectWeight)
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
</div>
<div id="container" hidden>

    <br />
    <br />
        <h4>Exam Questions</h4>
    <hr />

<table id="example" class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamQuestions.First().QuestionAnswer.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamQuestions.First().QuestionAnswer.TextOfQuestion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamQuestions.First().QuestionAnswer.Answer1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamQuestions.First().QuestionAnswer.Answer2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamQuestions.First().QuestionAnswer.Answer3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamQuestions.First().QuestionAnswer.Answer4)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ExamQuestions)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.QuestionAnswer.Id)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.QuestionAnswer.TextOfQuestion)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.QuestionAnswer.Answer1)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.QuestionAnswer.Answer2)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.QuestionAnswer.Answer3)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.QuestionAnswer.Answer4)
                    </td>
                </tr>
        }
    </tbody>
</table>


</div>
<div>
    <a asp-action="Edit" class="btn btn-success" asp-route-id="@Model?.Id">Edit</a> 
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
    <a onclick="Fanc()" class="btn btn-primary">Show / Hide Exam Questions</a>
    
</div>



<script src="~/js/jquery-3.5.1.js" type="text/javascript"></script>
<script src="~/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="~/js/dataTables.bootstrap5.min.js" type="text/javascript"></script>

<script>
    $(document).ready(function () {
        $.noConflict();
        var table = $('#example').DataTable();
    });
</script>


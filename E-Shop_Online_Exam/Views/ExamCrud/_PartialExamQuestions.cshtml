@model IEnumerable<EShopOnlineExam.Models.ExamQuestion>


<table id="example" class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionAnswer.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionAnswer.TextOfQuestion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionAnswer.Answer1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionAnswer.Answer2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionAnswer.Answer3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionAnswer.Answer4)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.QuestionAnswer.Id)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.QuestionAnswer.TextOfQuestion)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.QuestionAnswer.Answer1)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.QuestionAnswer.Answer2)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.QuestionAnswer.Answer3)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.QuestionAnswer.Answer4)
                    </td>
                </tr>
        }
    </tbody>
</table>


<script src="~/js/jquery-3.5.1.js" type="text/javascript"></script>
<script src="~/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="~/js/dataTables.bootstrap5.min.js" type="text/javascript"></script>

<script>
    $(document).ready(function () {
        $.noConflict();
        var table = $('#example').DataTable();
    });

</script>
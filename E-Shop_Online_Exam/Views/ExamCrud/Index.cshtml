@model IEnumerable<EShopOnlineExam.Models.Exam>

@{
    ViewData["Title"] = "Index";
    var time = "";
}

<h1>Exams</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table id="example" class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Certificate.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Certificate.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamDuration)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
           

                var minutes = ((item.ExamDuration / 60)).ToString();
                time = $"{minutes} minutes";
             
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Certificate.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Certificate.Title)
            </td>
            <td>
                    @time
            </td>
            <td align="center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>



<script src="~/js/jquery-3.5.1.js" type="text/javascript"></script>
<script src="~/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="~/js/dataTables.bootstrap5.min.js" type="text/javascript"></script>

<script>
    $(document).ready(function () {
        $.noConflict();
        var table = $('#example').DataTable();
    });

</script>
@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <h3 style="margin-top:5rem">Create a new account</h3>
        <div class="card shadow">
            <div class="card-body">
                <section>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="form-floating my-3 col-6">
                                <input asp-for="Input.FirstName" class="form-control" autocomplete="on" aria-required="true" />
                                <label asp-for="Input.FirstName"></label>
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-floating my-3 col-6">
                                <input asp-for="Input.LastName" class="form-control" autocomplete="on" aria-required="true" />
                                <label asp-for="Input.LastName"></label>
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-floating my-3 col-6">
                                <input asp-for="Input.Email" class="form-control" autocomplete="on" aria-required="true" />
                                <label asp-for="Input.Email"></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating my-3 col-6">
                                <input type="date" asp-for="Input.DateOfBirth" class="form-control text-muted" autocomplete="on" aria-required="true" />
                                <label asp-for="Input.DateOfBirth"></label>
                                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-floating my-3 col-6">
                                <input asp-for="Input.Country" class="form-control" autocomplete="on" aria-required="true" />
                                <label asp-for="Input.Country"></label>
                                <span asp-validation-for="Input.Country" class="text-danger"></span>
                            </div>
                            <div class="form-floating my-3 col-6">
                                <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="on" aria-required="true" />
                                <label asp-for="Input.PhoneNumber"></label>
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-floating my-3 col-6">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                                <label asp-for="Input.Password"></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-floating my-3 col-6">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                <label asp-for="Input.ConfirmPassword"></label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="container mt-5">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="row">
                                        <input class="col-1 ms-1 form-check-input" style="width:22px; height:22px;" type="checkbox" required/>
                                        <label class="text-muted col-md-11">I have read and agree to the <a href="#">terms and conditions</a></label>
                                        </div>
                                        <div class="row">
                                            <input class="col-1 ms-1 form-check-input" style="width:22px; height:22px;"  type="checkbox" />
                                            <label class="text-muted col-md-11">I would like to receive the newsletter and other promotional emails</label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
